<%- include('layout', { title: '用户管理 - 术语管理系统', body: `
<div class="container mt-4">
    <!-- 页面标题 -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <a href="/admin" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-users-cog me-2 text-primary"></i>
                        用户管理
                    </h2>
                    <p class="text-muted mb-0">管理员工账户、查看登录信息、重置密码</p>
                </div>
            </div>
        </div>
    </div>

    <!-- 用户统计卡片 -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm text-center" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <i class="fas fa-users fa-2x text-primary mb-2"></i>
                    <h4 class="text-primary mb-1">${users.length}</h4>
                    <small class="text-muted">总用户数</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm text-center" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <i class="fas fa-user-check fa-2x text-success mb-2"></i>
                    <h4 class="text-success mb-1">${users.filter(u => u.is_online).length}</h4>
                    <small class="text-muted">在线用户</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm text-center" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <i class="fas fa-crown fa-2x text-warning mb-2"></i>
                    <h4 class="text-warning mb-1">${users.filter(u => u.role === 'admin').length}</h4>
                    <small class="text-muted">管理员</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm text-center" style="border-radius: 15px;">
                <div class="card-body p-4">
                    <i class="fas fa-user-tie fa-2x text-info mb-2"></i>
                    <h4 class="text-info mb-1">${users.filter(u => u.role === 'user').length}</h4>
                    <small class="text-muted">员工</small>
                </div>
            </div>
        </div>
    </div>

    <!-- 操作按钮 -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <button class="btn btn-primary btn-custom" onclick="showCreateUserModal()">
                        <i class="fas fa-user-plus me-2"></i>创建新用户
                    </button>
                    <button class="btn btn-outline-info btn-custom" onclick="refreshUserList()">
                        <i class="fas fa-sync-alt me-2"></i>刷新列表
                    </button>
                </div>
                <div>
                    <div class="input-group" style="width: 300px;">
                        <input type="text" class="form-control" id="searchInput" placeholder="搜索用户...">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 用户列表 -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-header bg-transparent border-0 p-4">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>
                        用户列表
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="usersTable">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-0 p-3">用户信息</th>
                                    <th class="border-0 p-3">角色</th>
                                    <th class="border-0 p-3">登录信息</th>
                                    <th class="border-0 p-3">状态</th>
                                    <th class="border-0 p-3">密码</th>
                                    <th class="border-0 p-3">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${users.map(user => `
                                    <tr data-user-id="${user.id}">
                                        <td class="p-3">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" 
                                                         style="width: 40px; height: 40px;">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                </div>
                                                <div>
                                                    <h6 class="mb-1">${user.username}</h6>
                                                    <small class="text-muted">${user.email}</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="p-3">
                                            <span class="badge ${user.role === 'admin' ? 'bg-warning' : 'bg-primary'} px-3 py-2">
                                                <i class="fas fa-${user.role === 'admin' ? 'crown' : 'user'} me-1"></i>
                                                ${user.role === 'admin' ? '管理员' : '员工'}
                                            </span>
                                        </td>
                                        <td class="p-3">
                                            <div>
                                                ${user.last_login ? `
                                                    <small class="text-muted d-block">
                                                        <i class="fas fa-clock me-1"></i>
                                                        ${new Date(user.last_login).toLocaleString('zh-CN')}
                                                    </small>
                                                    <small class="text-muted d-block">
                                                        <i class="fas fa-map-marker-alt me-1"></i>
                                                        ${user.last_login_location || '未知位置'}
                                                    </small>
                                                    <small class="text-muted d-block">
                                                        <i class="fas fa-network-wired me-1"></i>
                                                        ${user.last_login_ip || '未知IP'}
                                                    </small>
                                                ` : `
                                                    <small class="text-muted">从未登录</small>
                                                `}
                                            </div>
                                        </td>
                                        <td class="p-3">
                                            <div class="d-flex flex-column">
                                                <span class="badge ${user.is_online ? 'bg-success' : 'bg-secondary'} mb-1">
                                                    <i class="fas fa-circle me-1" style="font-size: 0.6rem;"></i>
                                                    ${user.is_online ? '在线' : '离线'}
                                                </span>
                                                <small class="text-muted">
                                                    登录 ${user.login_count || 0} 次
                                                </small>
                                            </div>
                                        </td>
                                        <td class="p-3">
                                            ${user.role === 'admin' ? `
                                                <span class="text-muted">
                                                    <i class="fas fa-lock me-1"></i>
                                                    加密存储
                                                </span>
                                            ` : `
                                                <div class="password-display">
                                                    <span class="password-text" style="font-family: monospace; background: #f8f9fa; padding: 2px 6px; border-radius: 4px;">
                                                        ${user.password_plain || '未设置'}
                                                    </span>
                                                    <button class="btn btn-sm btn-outline-secondary ms-1" 
                                                            onclick="copyPassword('${user.password_plain || ''}')"
                                                            title="复制密码">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                </div>
                                            `}
                                        </td>
                                        <td class="p-3">
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary" 
                                                        onclick="showResetPasswordModal(${user.id}, '${user.username}')"
                                                        title="重置密码">
                                                    <i class="fas fa-key"></i>
                                                </button>
                                                <button class="btn btn-outline-info" 
                                                        onclick="viewUserDetails(${user.id})"
                                                        title="查看详情">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                ${user.role !== 'admin' ? `
                                                    <button class="btn btn-outline-danger" 
                                                            onclick="deleteUser(${user.id}, '${user.username}')"
                                                            title="删除用户">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                ` : ''}
                                            </div>
                                        </td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 创建用户模态框 -->
<div class="modal fade" id="createUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius: 15px;">
            <div class="modal-header border-0 p-4">
                <h5 class="modal-title">
                    <i class="fas fa-user-plus me-2"></i>
                    创建新用户
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="createUserForm">
                    <div class="mb-3">
                        <label for="newUsername" class="form-label">
                            <i class="fas fa-user me-2"></i>用户名 <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control form-control-custom" id="newUsername" required>
                    </div>
                    <div class="mb-3">
                        <label for="newEmail" class="form-label">
                            <i class="fas fa-envelope me-2"></i>邮箱 <span class="text-danger">*</span>
                        </label>
                        <input type="email" class="form-control form-control-custom" id="newEmail" required>
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">
                            <i class="fas fa-lock me-2"></i>初始密码 <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="password" class="form-control form-control-custom" id="newPassword" required>
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('newPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="btn btn-outline-info" type="button" onclick="generatePassword()">
                                <i class="fas fa-random"></i>
                            </button>
                        </div>
                        <div class="form-text">员工密码将以明文形式存储，您可以随时查看</div>
                    </div>
                    <div class="mb-3">
                        <label for="newRole" class="form-label">
                            <i class="fas fa-user-tag me-2"></i>角色
                        </label>
                        <select class="form-control form-control-custom" id="newRole">
                            <option value="user">员工</option>
                            <option value="admin">管理员</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0 p-4">
                <button type="button" class="btn btn-outline-secondary btn-custom" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>取消
                </button>
                <button type="button" class="btn btn-primary btn-custom" onclick="createUser()">
                    <i class="fas fa-save me-2"></i>创建用户
                </button>
            </div>
        </div>
    </div>
</div>

<!-- 重置密码模态框 -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius: 15px;">
            <div class="modal-header border-0 p-4">
                <h5 class="modal-title">
                    <i class="fas fa-key me-2"></i>
                    重置密码
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    正在为用户 <strong id="resetUsername"></strong> 重置密码
                </div>
                <form id="resetPasswordForm">
                    <input type="hidden" id="resetUserId">
                    <div class="mb-3">
                        <label for="resetNewPassword" class="form-label">
                            <i class="fas fa-lock me-2"></i>新密码 <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="password" class="form-control form-control-custom" id="resetNewPassword" required>
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('resetNewPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="btn btn-outline-info" type="button" onclick="generatePasswordForReset()">
                                <i class="fas fa-random"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0 p-4">
                <button type="button" class="btn btn-outline-secondary btn-custom" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>取消
                </button>
                <button type="button" class="btn btn-warning btn-custom" onclick="resetPassword()">
                    <i class="fas fa-key me-2"></i>重置密码
                </button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // 搜索功能
    const searchInput = document.getElementById('searchInput');
    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('#usersTable tbody tr');
        
        rows.forEach(row => {
            const username = row.querySelector('h6').textContent.toLowerCase();
            const email = row.querySelector('small').textContent.toLowerCase();
            
            if (username.includes(searchTerm) || email.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
});

// 显示创建用户模态框
function showCreateUserModal() {
    const modal = new bootstrap.Modal(document.getElementById('createUserModal'));
    modal.show();
    
    // 清空表单
    document.getElementById('createUserForm').reset();
    document.getElementById('newUsername').focus();
}

// 显示重置密码模态框
function showResetPasswordModal(userId, username) {
    document.getElementById('resetUserId').value = userId;
    document.getElementById('resetUsername').textContent = username;
    document.getElementById('resetNewPassword').value = '';
    
    const modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
    modal.show();
    
    document.getElementById('resetNewPassword').focus();
}

// 切换密码可见性
function togglePasswordVisibility(inputId) {
    const input = document.getElementById(inputId);
    const button = input.nextElementSibling;
    const icon = button.querySelector('i');
    
    if (input.type === 'password') {
        input.type = 'text';
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
    } else {
        input.type = 'password';
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
    }
}

// 生成随机密码
function generatePassword() {
    const chars = 'ABCDEFGHJKMNPQRSTUVWXYZabcdefghijkmnpqrstuvwxyz23456789';
    let password = '';
    for (let i = 0; i < 8; i++) {
        password += chars.charAt(Math.floor(Math.random() * chars.length));
    }
    document.getElementById('newPassword').value = password;
}

function generatePasswordForReset() {
    const chars = 'ABCDEFGHJKMNPQRSTUVWXYZabcdefghijkmnpqrstuvwxyz23456789';
    let password = '';
    for (let i = 0; i < 8; i++) {
        password += chars.charAt(Math.floor(Math.random() * chars.length));
    }
    document.getElementById('resetNewPassword').value = password;
}

// 复制密码
function copyPassword(password) {
    if (!password) {
        showAlert('没有密码可复制', 'warning');
        return;
    }
    
    navigator.clipboard.writeText(password).then(() => {
        showAlert('密码已复制到剪贴板', 'success');
    }).catch(() => {
        showAlert('复制失败', 'danger');
    });
}

// 创建用户
async function createUser() {
    const username = document.getElementById('newUsername').value.trim();
    const email = document.getElementById('newEmail').value.trim();
    const password = document.getElementById('newPassword').value;
    const role = document.getElementById('newRole').value;
    
    if (!username || !email || !password) {
        showAlert('请填写所有必填字段', 'warning');
        return;
    }
    
    const createBtn = document.querySelector('#createUserModal .btn-primary');
    const originalText = createBtn.innerHTML;
    createBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>创建中...';
    createBtn.disabled = true;
    
    try {
        const response = await fetch('/admin/create-user', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ username, email, password, role })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showAlert(\`用户 "\${username}" 创建成功！\`, 'success');
            
            // 关闭模态框
            const modal = bootstrap.Modal.getInstance(document.getElementById('createUserModal'));
            modal.hide();
            
            // 刷新页面
            setTimeout(() => {
                window.location.reload();
            }, 1500);
        } else {
            showAlert(data.error || '创建用户失败', 'danger');
        }
    } catch (error) {
        console.error('创建用户失败:', error);
        showAlert('网络错误，请稍后重试', 'danger');
    } finally {
        createBtn.innerHTML = originalText;
        createBtn.disabled = false;
    }
}

// 重置密码
async function resetPassword() {
    const userId = document.getElementById('resetUserId').value;
    const newPassword = document.getElementById('resetNewPassword').value;
    
    if (!newPassword) {
        showAlert('请输入新密码', 'warning');
        return;
    }
    
    const resetBtn = document.querySelector('#resetPasswordModal .btn-warning');
    const originalText = resetBtn.innerHTML;
    resetBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>重置中...';
    resetBtn.disabled = true;
    
    try {
        const response = await fetch('/admin/reset-password', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ userId, newPassword })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showAlert('密码重置成功', 'success');
            
            // 关闭模态框
            const modal = bootstrap.Modal.getInstance(document.getElementById('resetPasswordModal'));
            modal.hide();
            
            // 刷新页面
            setTimeout(() => {
                window.location.reload();
            }, 1500);
        } else {
            showAlert(data.error || '重置密码失败', 'danger');
        }
    } catch (error) {
        console.error('重置密码失败:', error);
        showAlert('网络错误，请稍后重试', 'danger');
    } finally {
        resetBtn.innerHTML = originalText;
        resetBtn.disabled = false;
    }
}

// 刷新用户列表
function refreshUserList() {
    window.location.reload();
}

// 查看用户详情
function viewUserDetails(userId) {
    // 这里可以实现查看用户详情的功能
    showAlert('用户详情功能开发中', 'info');
}

// 删除用户
function deleteUser(userId, username) {
    if (confirm(\`确定要删除用户 "\${username}" 吗？此操作不可撤销。\`)) {
        showAlert('删除用户功能开发中', 'info');
    }
}

// 显示提示消息
function showAlert(message, type) {
    const alertDiv = document.createElement('div');
    alertDiv.className = \`alert alert-\${type} alert-dismissible fade show alert-custom\`;
    alertDiv.innerHTML = \`
        <i class="fas fa-\${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
        \${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    \`;
    
    const container = document.querySelector('.container');
    container.insertBefore(alertDiv, container.firstChild);
    
    // 3秒后自动消失
    setTimeout(() => {
        if (alertDiv.parentNode) {
            alertDiv.remove();
        }
    }, 3000);
}
</script>

